#
# clone-site hook for krog
#
MSG This will clone $2 from $1
MSG Initialize a site
RUN kran init-site $2; true
MSG

MSG rsync'ing files and folders, this will take some time.
# RUN ssh $1 'du -hc /var/www/$2 --exclude="*.jpg" --exclude="*.pdf" | grep total'
RUN rsync -ax --progress --exclude="*.jpg" --exclude="*.pdf" --exclude="tmp/*" --exclude="logs/*" --numeric-ids --delete --progress -e "ssh -T -c arcfour -o Compression=no -x" $1:/var/www/$2/ $2/www
MSG

MSG fetch database backup
RUN ~/.kran/hooks/helpers/fetch_db $1 $2
MSG

MSG Set site
STE $2

MSG Start container
RUN kran up $2
MSG Wait until its up
RUN sleep 10
MSG

MSG restore database
ADD ./helpers/restore_db /opt/restore_db
SSH /opt/restore_db
MSG
